{
    "rewrites": [
        {
            "source": "/api/check-modules",
            "destination": "/api/check-modules.js"
        },
        {
            "source": "/api/debug",
            "destination": "/api/debug.js"
        },
        {
            "source": "/api/test-load",
            "destination": "/api/test-load.js"
        },
        {
            "source": "/api/list-files",
            "destination": "/api/list-files.js"
        },
        {
            "source": "/api/(.*)",
            "destination": "/api/index.js"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ],
    "functions": {
        "api/*.js": {
            "includeFiles": "server/**"
        }
    }
}